<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17202A"
    tools:context="com.example.markinhos3.magiccards.activities.MainActivity">

    <ImageView
        android:id="@+id/activity_main___card_image"
        tools:src="@drawable/card_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/activity_main___cards_remain_text"
        android:background="#81000000"

        ></FrameLayout>

    <TextView
        android:id="@+id/activity_main___cards_remain_text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        tools:text="30 Cards Left"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:layout_marginTop="400dp"
        android:textStyle="bold"
        android:background="#8f900c3f"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/activity_main___cards_remain_text"
        android:background="#81000000"


        ></FrameLayout>




</RelativeLayout>
