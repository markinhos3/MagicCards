<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17202A"
    tools:context="com.example.markinhos3.magiccards.MainActivity">

    <ImageView
        android:id="@+id/activity_main___card_image"
        tools:src="@drawable/card_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/activity_main___cadrs_left_text"
        android:background="#693535"

        ></FrameLayout>

    <TextView
        android:id="@+id/activity_main___cadrs_left_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="30 Cards Left"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:background="#886e2727"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_above="@id/activity_main___cadrs_left_text"
        android:background="#693535"

        ></FrameLayout>




</RelativeLayout>
